size(w, h = w)
    width w
    height h

alignment = left center right justify start end
fon()
    sized = false
    for arg in arguments
        if arg is a 'color'
            color arg
        else if arg is a 'unit'
            if sized
                line-height arg
            else
                sized = true
                font-size arg
        else if arg in alignment
            text-align arg
        else
            font-weight arg