!!! 5
html(lang='en')
    head
        meta(charset='utf-8')
        title!= pageTitle

        link(rel='stylesheet', href='#{rootPath}/css/ui-lightness/jquery-ui-1.10.2.custom.css')
        link(rel='stylesheet', href='#{rootPath}/bootstrap/css/bootstrap.css')
        link(rel='stylesheet', href='#{rootPath}/css/main.css')
        link(rel='stylesheet', href='#{rootPath}/css/forms.css')
        link(rel='stylesheet', href='#{rootPath}/datepicker/datepicker.css')
        link(rel='stylesheet', href='#{rootPath}/timepicker/timepicker.css')
        link(rel='stylesheet', href='#{rootPath}/vendor/bootstrap-datetimepicker.min.css')
        link(rel='stylesheet', href='#{rootPath}/css/maps.css')
        link(rel='stylesheet', href='#{rootPath}/select2/select2.css')

        script(src='#{rootPath}/js/lib/jquery-1.9.1.js')
        script(src='#{rootPath}/js/lib/jquery-ui-1.10.2.custom.min.js')
        script(src='#{rootPath}/bootstrap/js/bootstrap.js')
        script(src='#{rootPath}/timepicker/bootstrap-timepicker.js')
        script(src='#{rootPath}/vendor/bootstrap-datetimepicker.min.js')
        script(src='#{rootPath}/ckeditor/ckeditor.js')
        script(src='#{rootPath}/datepicker/bootstrap-datepicker.js')
        script(src='#{rootPath}/js/maps.js')
        script(src='#{rootPath}/select2/select2.js')
        script(src='//api.filepicker.io/v1/filepicker.js')

        script var root = '#{rootPath}';

        != typeof(renderedHead) != 'undefined' ? renderedHead : ''

        block head

        !{global_head}

    body
        - if (!dialog)
            header.navbar.navbar-static-top
                .navbar-inner
                    .container
                        block nav
                            .btn-group.pull-right
                                a.btn.btn-inverse(href='#{rootPath}/')
                                    i.icon-home.icon-white
                                    |  Admin
                                a.btn(href="/")
                                    i.icon-share
                                    |  Site
                                a.btn(href='#{rootPath}/logout')
                                    .icon-lock
                                    |  Logout
                        h1
                            block title
                                a(href='#{rootPath}/') #{adminTitle}
                            block breadcrumb

        .container
            #old-version.alert.alert-error(style='position: fixed;bottom: 1em;right: 1em;width: 30em;height: 4em;border-radius: 10px;display: block;opacity: 0.8;display:none')
                button.close(type='button',data-dismiss='alert') &times;
                strong Warning;
                |  There is a newer version of formage.

            #content
                block body

            - if (!dialog)
                footer.footer
                    - if (userPanel)
                        p.user-panel
                            !{userPanel}
                    p
                        a(href='http://github.com/Empeeric/formage') Formage
                        |  #{version}, from&nbsp;
                        a(href='http://empeeric.com') Empeeric
                    a(href='http://github.com/Empeeric/formage')
                        img(src='#{rootPath}/images/logo-40.png')

        block scripts

        !{global_script}
